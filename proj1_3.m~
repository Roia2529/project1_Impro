%Project01-denoise
close all;
s = 'proj1_3.png';
Gray_Image = rgb2gray(imread(s));
datas = histogramOwn(Gray_Image, 255, 1, 255);

F1 = RangeFilter(Gray_Image,0,70);
F2 = RangeFilter(Gray_Image,,198);
F3 = RangeFilter(Gray_Image,211,256);
subplot(1,3,1);
imshow(F1);
subplot(1,3,2);
imshow(F2);
subplot(1,3,3);
imshow(F3);
